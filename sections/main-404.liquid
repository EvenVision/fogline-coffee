{% comment %} 404 Error Assets {% endcomment %}
<link rel="preload" href="{{ 'section-main-404.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="{{ 'section-main-404.css' | asset_url }}"></noscript>

{% comment %} 404 Error Template {% endcomment %}
<section class="error-page"
  data-section-id="{{ section.id }}"
  data-section-type="404-page"
  data-section-loaded="false">
  <div class="grid__wrapper pt10 pb10">
    <div class="span-12 auto a-center">
      <h1>{{ 'general.404.title' | t }}</h1>
    </div>
    <div class="push-4 span-4 a-center">
      <p>{{ 'general.404.subtext' | t }}</p>
      <a class="button btn-outline" href="{{ routes.root_url }}">{{ 'general.404.button' | t }}</a>
    </div>
  </div>
</section>
