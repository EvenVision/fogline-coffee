          {
            "type": "color",
            "id": "overlay_color",
            "label": "Overlay",
            "default": "#000"
          }
        ]
      },
      {
        "type": "row_break",
        "name": "Row Break",
        "settings": []
      }
    ],
    "presets": [
      {
        "name": "Image gallery",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ],
    "templates": ["404", "article", "blog", "cart", "collection", "list-collections", "index", "page", "product", "search"]
  }
